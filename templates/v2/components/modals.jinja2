{% extends "v2/layouts/inner.jinja2" %}

{% block sprites %}{% include "sprites/ui.svg" %}{% endblock sprites %}

{% block content %}
    <div class="container page-content">
        <button type="button" class="btn _success mb-2" data-toggle="modal" data-target="#exampleModalBasic">
            Простое модальное окно
        </button>
        <button type="button" class="btn _success _outline mb-2" data-toggle="modal" data-target="#exampleModalComplex">
            Модальное окно с хедером и футером
        </button>
        <button type="button" class="btn _success _outline mb-2" data-toggle="modal" data-target="#exampleModalImage">
            Модальное окно с картинкой
        </button>
        <button type="button" class="btn _success mb-2" data-toggle="modal" data-target="#exampleModalCover">
            Модальное окно на весь экран
        </button>
        <button type="button" class="btn _danger mb-2" data-toggle="modal" data-target="#exampleModalLoad">
            Подгрузка
        </button>
        <button type="button" class="btn _success mb-2" data-toggle="modal" data-target="#exampleModalBasicSm">
            Маленький размер
        </button>

        <button type="button" class="btn _success mb-2" data-toggle="modal" data-target="#exampleModalBasicLg">
            Большой размер
        </button>

        <button type="button" class="btn _success mb-2" data-toggle="modal" data-target="#exampleModalScroll">
            Скролл
        </button>

