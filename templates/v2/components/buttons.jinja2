            Default button
        </div>
        <div class="btn _outline _green m-8">
            Default button
        </div>
        <div class="btn _red m-8">
            Default button
        </div>
        <div class="btn _outline _red m-8">
            Default button
        </div>
    </div>

    <div class="container" style="background-color: #1b181b">
        <h1 class="text-white p-8">On black</h1>
        <div class="btn _light m-8">
            Default button
        </div>
        <div class="btn _outline _light m-8">
            {{ macros.svg_inline('cross') }}
            Default button
        </div>
        <div class="btn _white _opacity-10 m-8">
            Default button
        </div>
    </div>

    <div class="container">
        <h1 class="m-8">WIth icon</h1>
        <div class="btn _light m-8">
            {{ macros.svg_inline('user-sign') }}
            Default button
        </div>
        <div class="btn  _red m-8">
            Default button
            {{ macros.svg_inline('cross') }}
        </div>
        <div class="btn _small _gray m-8">
            Default button
            {{ macros.svg_inline('cross') }}
