        <div class="btn _teal m-8">
            Default button
        </div>
        <div class="btn _outline _teal m-8">
            Default button
        </div>
        <div class="btn _gray m-8">
            Default button
        </div>
        <div class="btn _outline _gray m-8">
            Default button
        </div>
